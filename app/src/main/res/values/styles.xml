<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="android:Theme.Material.NoActionBar" tools:targetApi="lollipop">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="default_button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/default_button_rounded</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="default_title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="default_subtitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="default_editText">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:height">52dp</item>
        <item name="android:background">@drawable/default_edit_text_rounded</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

</resources>
