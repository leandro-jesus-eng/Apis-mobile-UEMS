<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <RadioButton
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edNomeComportamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Adicione um comportamento"
        app:layout_constraintBottom_toBottomOf="@+id/check"
        app:layout_constraintStart_toEndOf="@+id/check"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:maxLines="1"/>

    <ImageButton
        android:id="@+id/imgAddTipo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_baseline_close_24"
        app:layout_constraintStart_toEndOf="@+id/edNomeComportamento"
        app:layout_constraintTop_toTopOf="@+id/check" />

</androidx.constraintlayout.widget.ConstraintLayout>